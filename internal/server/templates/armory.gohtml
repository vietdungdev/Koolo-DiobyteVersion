                            {{ end }}
                            {{ end }}
                        </div>
                        <div class="inventory-items-layer">
                            {{ range .Armory.Stash }}
                            <div class="inventory-item"
                                 style="left: calc({{ .Position.X }} * 30px + 2px); top: calc({{ .Position.Y }} * 30px + 2px); width: {{ mul .Width 29 }}px; height: {{ mul .Height 29 }}px; background-image: url('/items/{{ .ImageName }}');"
