            { name: "Mist", runes: ["Cham", "Shael", "Gul", "Thul", "Ith"], bases: "Missile Weapon", level: 67, stats: "Concentration Aura, +325-375% ED, +3 All Skills" },
            { name: "Pattern", runes: ["Tal", "Ort", "Thul"], bases: "Claw", level: 23, stats: "+30% FHR, +40-80% ED, +6 Dex/Str" },
            { name: "Unbending Will", runes: ["Fal", "Io", "Ith", "Eld", "El", "Hel"], bases: "Sword", level: 41, stats: "+330-370% ED, +20-30% IAS, +75% Bonus AR" },
            { name: "Wisdom", runes: ["Pul", "Ith", "Eld"], bases: "Helm", level: 45, stats: "+33% Pierce, Cannot Be Frozen, +5 Mana After Kill, 15-25% MF" },
            { name: "Wind", runes: ["Sur", "El"], bases: "Melee Weapon", level: 61, stats: "+120-160% ED, +40% FHR, Ignore Target Defense, -50% Target Defense" },
        ];

        let runeInventory = {};

        async function loadRunewordPlanner() {
            const data = await fetchAllArmoryData();
            console.log('Runeword Planner - Fetched data:', data);
            runeInventory = {};

            // Count all runes across all characters
            for (const [charName, armory] of Object.entries(data)) {
                console.log('Processing character:', charName, armory);
                // Note: API returns lowercase property names (stash, sharedStash1, etc.)
                const allItems = [
                    ...(armory.stash || []),
                    ...(armory.sharedStash1 || []),
                    ...(armory.sharedStash2 || []),
                    ...(armory.sharedStash3 || []),
                    ...(armory.inventory || []),
                    ...(armory.cube || [])
                ];
                console.log('All items count:', allItems.length);

                for (const item of allItems) {
                    // Check by itemType first (most reliable), then fall back to name pattern
                    const isRune = item.itemType === 'rune' || 
                                   (item.name && item.name.toLowerCase().endsWith('rune'));
                    if (isRune && item.name) {
                        // Handle both "RalRune" and "Ral Rune" formats
                        const runeName = item.name.replace(/Rune$/i, '').replace(/ $/, '');
                        console.log('Found rune:', item.name, '->', runeName);
                        runeInventory[runeName] = (runeInventory[runeName] || 0) + 1;
                    }
                }
            }

            console.log('Final rune inventory:', runeInventory);
            
            // Scan for available bases (socketed items)
            scanForBases(data);
            
            renderRuneInventory();
            analyzeRunewords();
            renderAllRunewords();
        }

        function renderRuneInventory() {
            const container = document.getElementById('runeInventory');
            const runeOrder = ['El', 'Eld', 'Tir', 'Nef', 'Eth', 'Ith', 'Tal', 'Ral', 'Ort', 'Thul', 'Amn', 'Sol', 'Shael', 'Dol', 'Hel', 'Io', 'Lum', 'Ko', 'Fal', 'Lem', 'Pul', 'Um', 'Mal', 'Ist', 'Gul', 'Vex', 'Ohm', 'Lo', 'Sur', 'Ber', 'Jah', 'Cham', 'Zod'];
            
            const sortedRunes = Object.entries(runeInventory)
                .sort((a, b) => runeOrder.indexOf(a[0]) - runeOrder.indexOf(b[0]));

            if (sortedRunes.length === 0) {
                container.innerHTML = '<span style="color: #888;">No runes found across your characters</span>';
                return;
            }

            container.innerHTML = sortedRunes.map(([rune, count]) => `
                <div class="rune-count">
                    <span class="rune-name">${rune}</span>
                    <span class="count">Ã—${count}</span>
                </div>
            `).join('');
        }

        // Base type mappings for runeword matching
        const BASE_TYPE_MAP = {
            'sword': ['swor', 'sword'],
            'axe': ['axe'],
            'mace': ['mace', 'club', 'scep', 'hamm'],
            'hammer': ['hamm'],
            'scepter': ['scep'],
            'polearm': ['pole', 'spea'],
            'staff': ['staf'],
            'wand': ['wand'],
            'helm': ['helm', 'pelt', 'phlm', 'circ'],
            'body armor': ['tors', 'armor'],
            'shield': ['shie', 'ashd', 'head'],
            'paladin shield': ['ashd'],
            'missile weapon': ['bow', 'xbow', 'abow', 'axbo'],
            'melee weapon': ['swor', 'axe', 'mace', 'club', 'scep', 'hamm', 'pole', 'spea'],
            'weapon': ['swor', 'axe', 'mace', 'club', 'scep', 'hamm', 'pole', 'spea', 'bow', 'xbow', 'staf', 'wand'],
            'claw': ['h2h', 'h2h2', 'ashd'],
        };

        let availableBases = []; // Stores socketed items from stash

        function getSocketCount(item) {
            // First check socketCount field
            if (item.socketCount > 0) return item.socketCount;
            
            // Then check stats array for stat ID 194 (Socketed)
            if (item.stats) {
                const socketStat = item.stats.find(s => s.id === 194);
                if (socketStat) return socketStat.value;
            }
            
            // Check baseStats array too
            if (item.baseStats) {
                const socketStat = item.baseStats.find(s => s.id === 194);
                if (socketStat) return socketStat.value;
            }
            
            return 0;
        }

        function scanForBases(data) {
            availableBases = [];
            
            for (const [charName, armory] of Object.entries(data)) {
                const allItems = [
                    ...(armory.stash || []),
                    ...(armory.sharedStash1 || []),
                    ...(armory.sharedStash2 || []),
                    ...(armory.sharedStash3 || []),
                    ...(armory.inventory || []),
                    ...(armory.cube || [])
                ];

                for (const item of allItems) {
                    // Skip items that already have runes/gems socketed
                    if (item.sockets && item.sockets.length > 0) continue;
                    // Skip runewords
                    if (item.isRuneword) continue;
                    
                    // Get socket count from various sources
                    const sockets = getSocketCount(item);
                    
                    // Only include items with sockets (hasSockets or socketCount > 0)
                    if (sockets > 0 || item.hasSockets) {
                        const finalSockets = sockets > 0 ? sockets : 0;
                        if (finalSockets > 0) {
                            availableBases.push({
                                name: item.name,
                                itemType: item.itemType,
                                sockets: finalSockets,
                                ethereal: item.ethereal,
                                character: charName,
                                quality: item.quality,
                                defense: item.defense,
                                imageName: item.imageName
                            });
                        }
                    }
                }
            }
            
            console.log('Available bases found:', availableBases);
        }

        function getMatchingBases(runewordBases, socketCount) {
            const baseTypes = runewordBases.toLowerCase().split(',').map(b => b.trim());
            const matches = [];

            for (const base of availableBases) {
                if (base.sockets !== socketCount) continue;
                
                const itemType = (base.itemType || '').toLowerCase();
                
                for (const baseType of baseTypes) {
                    const typePatterns = BASE_TYPE_MAP[baseType] || [baseType];
                    if (typePatterns.some(pattern => itemType.includes(pattern))) {
                        matches.push(base);
                        break;
                    }
                }
            }
            
            return matches;
        }

        function analyzeRunewords() {
            const canMake = [];
            const almost = [];

            for (const rw of RUNEWORDS) {
                const { have, missing, status } = checkRunewordRunes(rw.runes);
                const matchingBases = getMatchingBases(rw.bases, rw.runes.length);
                
                if (missing.length === 0) {
                    canMake.push({ ...rw, have, missing, status, matchingBases });
                } else if (missing.length <= 2) {
                    almost.push({ ...rw, have, missing, status, matchingBases });
                }
            }

            renderRunewordList('canMakeList', canMake, true);
            renderRunewordList('almostList', almost, false);
        }

        function checkRunewordRunes(runes) {
            const tempInventory = { ...runeInventory };
            const have = [];
            const missing = [];
            const status = []; // Track have/missing status for each position

            for (const rune of runes) {
                if (tempInventory[rune] && tempInventory[rune] > 0) {
                    have.push(rune);
                    status.push(true); // This position has the rune
                    tempInventory[rune]--;
                } else {
                    missing.push(rune);
                    status.push(false); // This position is missing the rune
                }
            }

            return { have, missing, status };
        }

        function renderRunewordList(containerId, runewords, canMake) {
            const container = document.getElementById(containerId);
            
            if (runewords.length === 0) {
                container.innerHTML = `<span style="color: #888;">${canMake ? 'No runewords can be made with current runes' : 'No runewords are close to completion'}</span>`;
                return;
            }

            container.innerHTML = runewords.map(rw => {
                const basesHtml = rw.matchingBases && rw.matchingBases.length > 0 
                    ? `<div class="runeword-available-bases">
                         <span style="color: #4CAF50; font-size: 11px;"><i class="bi bi-check-circle"></i> Available bases:</span>
                         ${rw.matchingBases.slice(0, 3).map(b => 
                           `<a href="/armory?character=${encodeURIComponent(b.character)}" class="base-tag" title="View ${b.character}'s Armory${b.ethereal ? ' (Ethereal)' : ''}">${b.name}${b.ethereal ? ' âš¡' : ''}</a>`
                         ).join('')}
                         ${rw.matchingBases.length > 3 ? `<span class="base-tag-more">+${rw.matchingBases.length - 3} more</span>` : ''}
                       </div>`
                    : (canMake ? `<div class="runeword-no-bases"><span style="color: #ff6b6b; font-size: 11px;"><i class="bi bi-x-circle"></i> No suitable bases found</span></div>` : '');
                
                return `
                <div class="runeword-card ${canMake ? 'can-make' : 'almost'}">
                    <div class="runeword-name"><a href="${getRunewordWikiUrl(rw.name)}" target="_blank" title="View on Diablo Wiki">${rw.name} <i class="bi bi-box-arrow-up-right" style="font-size: 10px; opacity: 0.6;"></i></a></div>
                    <div class="runeword-bases">${rw.bases} (${rw.runes.length} sockets, Level ${rw.level})</div>
                    <div class="runeword-runes">
                        ${rw.runes.map((r, i) => `<span class="rune-slot ${rw.status[i] ? 'have' : 'missing'}">${r}</span>`).join('')}
                    </div>
                    ${basesHtml}
                    <div class="runeword-stats">${rw.stats}</div>
                </div>
                `;
            }).join('');
        }

        function getRunewordWikiUrl(name) {
            // Convert runeword name to wiki URL format
            // Replace spaces with underscores, handle special characters
            const urlName = name.replace(/'/g, '%27').replace(/ /g, '_');
            return `https://diablo.fandom.com/wiki/${urlName}_Rune_Word`;
        }

        function renderAllRunewords() {
            const container = document.getElementById('allRunewordsList');
            container.innerHTML = RUNEWORDS.map(rw => {
                const { have, missing, status } = checkRunewordRunes(rw.runes);
                return `
                    <div class="runeword-card">
                        <div class="runeword-name"><a href="${getRunewordWikiUrl(rw.name)}" target="_blank" title="View on Diablo Wiki">${rw.name} <i class="bi bi-box-arrow-up-right" style="font-size: 10px; opacity: 0.6;"></i></a></div>
                        <div class="runeword-bases">${rw.bases} (Level ${rw.level})</div>
                        <div class="runeword-runes">
                            ${rw.runes.map((r, i) => `<span class="rune-slot ${status[i] ? 'have' : 'missing'}">${r}</span>`).join('')}
                        </div>
                        <div class="runeword-stats">${rw.stats}</div>
                    </div>
                `;
            }).join('');

            // Setup search
            document.getElementById('runewordSearch').addEventListener('input', function() {
                const query = this.value.toLowerCase();
                document.querySelectorAll('#allRunewordsList .runeword-card').forEach(card => {
                    const text = card.textContent.toLowerCase();
                    card.style.display = text.includes(query) ? '' : 'none';
                });
            });
        }

        // ============ CONTEXT MENU ============
        let contextMenuTarget = null;

        function showItemContextMenu(event, element) {
            event.preventDefault();
            event.stopPropagation();
            
            // Hide the tooltip so it doesn't block the context menu
            hideTooltip();
            
            contextMenuTarget = element;
            const menu = document.getElementById('contextMenu');
            
            // Use clientX/clientY for fixed positioning (viewport-relative)
            let x = event.clientX;
            let y = event.clientY;
            
            // Temporarily show to get dimensions
            menu.style.visibility = 'hidden';
            menu.classList.add('visible');
            const menuRect = menu.getBoundingClientRect();
            menu.style.visibility = '';
            
            // Adjust if menu would go off-screen
            const viewportWidth = window.innerWidth;
            const viewportHeight = window.innerHeight;
            
            if (x + menuRect.width > viewportWidth) {
                x = viewportWidth - menuRect.width - 10;
            }
            if (y + menuRect.height > viewportHeight) {
                y = viewportHeight - menuRect.height - 10;
            }
            
            // Ensure not negative
            x = Math.max(10, x);
            y = Math.max(10, y);
            
            menu.style.left = x + 'px';
            menu.style.top = y + 'px';
        }

        function hideContextMenu() {
            document.getElementById('contextMenu').classList.remove('visible');
            contextMenuTarget = null;
        }

        document.addEventListener('click', hideContextMenu);

        // Right-click on items for context menu
        document.querySelectorAll('.inventory-item, .equip-item').forEach(item => {
            item.addEventListener('contextmenu', function(event) {
                showItemContextMenu(event, this);
            });
        });

        function copyItemStats() {
            if (!contextMenuTarget) return;
            
            const itemData = JSON.parse(contextMenuTarget.dataset.item || '{}');
            let text = itemData.name || 'Unknown Item';
            
            if (itemData.stats && itemData.stats.length > 0) {
                text += '\n' + '-'.repeat(30);
                for (const stat of itemData.stats) {
                    if (stat.string) {
                        text += '\n' + stat.string;
                    }
                }
            }
            
            if (itemData.ethereal) {
                text += '\nEthereal (Cannot be Repaired)';
            }
            
            if (itemData.sockets && itemData.sockets.length > 0) {
                text += '\n' + '-'.repeat(30);
                text += '\nSocketed (' + itemData.sockets.length + '):';
                for (const socket of itemData.sockets) {
                    text += '\n  ' + socket.name;
                }
            }

            navigator.clipboard.writeText(text).then(() => {
                showCopyNotification('Item stats copied!');
            });
            
            hideContextMenu();
        }

        function copyItemName() {
            if (!contextMenuTarget) return;
            
            const itemData = JSON.parse(contextMenuTarget.dataset.item || '{}');
            navigator.clipboard.writeText(itemData.name || 'Unknown Item').then(() => {
                showCopyNotification('Item name copied!');
            });
            
            hideContextMenu();
        }

        function showCopyNotification(message) {
            const notif = document.createElement('div');
            notif.style.cssText = 'position: fixed; bottom: 80px; right: 24px; background: rgba(76, 175, 80, 0.9); color: white; padding: 12px 20px; border-radius: 8px; z-index: 3000; animation: fadeIn 0.2s;';
            notif.textContent = message;
            document.body.appendChild(notif);
            setTimeout(() => notif.remove(), 2000);
        }

        // Theme handling
        function changeTheme(theme) {
            document.documentElement.classList.remove('theme-colorful', 'theme-dark', 'theme-light');
            document.body.classList.remove('theme-colorful', 'theme-dark', 'theme-light');
            document.documentElement.classList.add('theme-' + theme);
            document.body.classList.add('theme-' + theme);
            localStorage.setItem('armoryTheme', theme);
        }

        // Restore saved theme on page load
        (function() {
            const saved = localStorage.getItem('armoryTheme') || 'colorful';
            const selector = document.querySelector('.theme-selector');
            if (selector) {
                selector.value = saved;
            }
            changeTheme(saved);
        })();
    </script>
</body>
