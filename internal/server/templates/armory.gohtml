            tab.addEventListener('click', function() {
                const view = this.dataset.view;
                
                // Update tab active state
                document.querySelectorAll('.armory-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                // Update view visibility
                document.querySelectorAll('.armory-view').forEach(v => v.classList.remove('active'));
                document.getElementById('view-' + view).classList.add('active');
                
                // Load data for views if needed
                if (view === 'cross-character') {
                    loadCrossCharacterView();
                } else if (view === 'runeword-planner') {
                    loadRunewordPlanner();
                }
            });
