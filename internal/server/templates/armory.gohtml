        // ============ CROSS-CHARACTER VIEW ============
        async function loadCrossCharacterView() {
            const data = await fetchAllArmoryData();
            const grid = document.getElementById('crossCharGrid');
            
            if (Object.keys(data).length === 0) {
                grid.innerHTML = '<div style="color: #888; text-align: center; padding: 40px;">No character data available</div>';
                return;
            }

            grid.innerHTML = Object.entries(data).map(([name, armory]) => {
                // Note: API returns lowercase property names
                const allItems = [
                    ...(armory.stash || []),
                    ...(armory.sharedStash1 || []),
                    ...(armory.sharedStash2 || []),
                    ...(armory.sharedStash3 || [])
                ];
                
                const notableItems = allItems.filter(i => 
                    i.quality === 'Unique' || i.quality === 'Set' || i.isRuneword || i.name?.toLowerCase().endsWith('rune')
                ).slice(0, 20);

                return `
                    <div class="cross-char-card" onclick="goToCharacter('${name}')">
                        <div class="cross-char-header">
                            <h4>${escapeHtml(name)}</h4>
                            <span class="char-info">Level ${armory.level || '?'} ${armory.class || ''}</span>
                        </div>
                        <div class="cross-char-items">
                            ${notableItems.length > 0 ? notableItems.map(item => {
                                const escapedItem = escapeHtmlAttr(JSON.stringify(item));
                                return `
                                <div class="mini-item item-quality-${(item.quality || 'normal').toLowerCase()}"
                                     style="background-image: url('/items/${item.imageName || 'unknown.png'}');"
                                     title="${escapeHtml(item.name)}"
                                     data-item='${escapedItem}'
                                     onmouseenter="showTooltip(event, this)"
                                     onmouseleave="hideTooltip()"
                                     onclick="event.stopPropagation()">
                                </div>
                                `;
                            }).join('') : '<span style="color: #666; font-size: 12px;">No notable items</span>'}
                        </div>
                    </div>
                `;
            }).join('');
        }

