                        {{ end }}
                        {{ end }}
                    </div>
                    <div class="inventory-items-layer">
                        {{ range .Armory.Belt }}
                        <div class="inventory-item"
                             style="left: calc({{ .Position.X }} * 30px + 2px); top: calc({{ .Position.Y }} * 30px + 2px); width: 29px; height: 29px; background-image: url('/items/{{ .ImageName }}');"
                             data-item='{{ . | json }}'
                             onmouseenter="showTooltip(event, this)"
                             onmouseleave="hideTooltip()"
                             onmousemove="moveTooltip(event)"
                             oncontextmenu="showItemContextMenu(event, this)">
                        </div>
                        {{ end }}
                    </div>
                </div>
                </div>
            </div>
        </div>

        <!-- Row 2: Stash | Cube | Mercenary -->
        <div class="panel border rounded-lg flex flex-wrap mt-6 armory-row">
            <!-- Stash -->
            <div class="p-4 flex-1 min-w-[200px] border-r border-[#4a4a4a]">
                <div class="flex items-center justify-between mb-3">
                    <h3 class="section-title" style="margin-bottom: 0; border-bottom: none; padding-bottom: 0;"><i class="bi bi-box-seam mr-2"></i>Stash</h3>
                    <button class="selection-mode-toggle" id="selectionModeBtn" onclick="toggleSelectionMode()">
                        <i class="bi bi-check2-square"></i>
                        <span>Select Items</span>
                    </button>
                </div>
                
                <!-- Selection Info Bar -->
                <div class="selection-info" id="selectionInfo">
                    <i class="bi bi-info-circle"></i>
                    <span><span class="count" id="selectedCount">0</span> items selected</span>
                    <button class="btn-clear-selection" onclick="clearSelection()">Clear</button>
                </div>
                
                <div class="stash-tabs">
                    <button class="stash-tab active" onclick="showStashTab('personal')">Personal</button>
                    <button class="stash-tab" onclick="showStashTab('shared1')">Shared 1</button>
                    <button class="stash-tab" onclick="showStashTab('shared2')">Shared 2</button>
                    <button class="stash-tab" onclick="showStashTab('shared3')">Shared 3</button>
                </div>
                
                <!-- Personal Stash -->
                <div id="stash-personal" class="stash-content active">
                    <div class="inventory-container">
