    <!-- Tooltip -->
    <div id="item-tooltip" class="item-tooltip"></div>

    <script>
        // Current character name for API calls
        const currentCharacter = '{{ .Character }}';
        
        // Selection state
        let selectionMode = false;
        let selectedItems = new Map(); // key: DOM element, value: item data
        let itemIdCounter = 0; // For generating unique IDs

        function loadCharacter(name) {
            if (name) {
                window.location.href = '/armory?character=' + encodeURIComponent(name);
            }
        }

        function showStashTab(tab) {
            // Hide all stash contents
            document.querySelectorAll('.stash-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.stash-tab').forEach(el => el.classList.remove('active'));
            
            // Show selected tab
            document.getElementById('stash-' + tab).classList.add('active');
            event.target.classList.add('active');
        }

        // ============ SELECTION MODE ============
        
        function toggleSelectionMode() {
            selectionMode = !selectionMode;
            const btn = document.getElementById('selectionModeBtn');
            const stashItems = document.querySelectorAll('#stash-personal .inventory-item, #stash-shared1 .inventory-item, #stash-shared2 .inventory-item, #stash-shared3 .inventory-item');
            
            if (selectionMode) {
                btn.classList.add('active');
                btn.innerHTML = '<i class="bi bi-x-square"></i><span>Exit Selection</span>';
                stashItems.forEach(item => {
                    item.classList.add('selectable');
                    item.addEventListener('click', handleItemClick);
                });
            } else {
                btn.classList.remove('active');
                btn.innerHTML = '<i class="bi bi-check2-square"></i><span>Select Items</span>';
                stashItems.forEach(item => {
                    item.classList.remove('selectable');
                    item.removeEventListener('click', handleItemClick);
                });
                clearSelection();
            }
        }

        function handleItemClick(event) {
            event.stopPropagation();
            if (!selectionMode) return;
            
            const itemElement = event.currentTarget;
            const itemData = JSON.parse(itemElement.dataset.item);
            
            // Use the DOM element itself as the key for guaranteed uniqueness
            if (selectedItems.has(itemElement)) {
                selectedItems.delete(itemElement);
                itemElement.classList.remove('selected');
            } else {
                selectedItems.set(itemElement, {
                    data: itemData,
                    stashTab: getItemStashTab(itemElement)
                });
                itemElement.classList.add('selected');
            }
            
            updateSelectionUI();
        }

        function getItemStashTab(element) {
            if (element.closest('#stash-personal')) return 'personal';
            if (element.closest('#stash-shared1')) return 'shared1';
            if (element.closest('#stash-shared2')) return 'shared2';
            if (element.closest('#stash-shared3')) return 'shared3';
            return 'unknown';
        }

        function clearSelection() {
            selectedItems.forEach((item, element) => {
                element.classList.remove('selected');
            });
            selectedItems.clear();
            updateSelectionUI();
        }

        function updateSelectionUI() {
            const count = selectedItems.size;
            const fab = document.getElementById('dropFab');
            const fabCount = document.getElementById('dropFabCount');
            const selectionInfo = document.getElementById('selectionInfo');
            const selectedCount = document.getElementById('selectedCount');
            
            if (count > 0) {
                fab.classList.add('visible');
                fabCount.textContent = count;
                selectionInfo.classList.add('visible');
                selectedCount.textContent = count;
            } else {
                fab.classList.remove('visible');
                selectionInfo.classList.remove('visible');
            }
        }

        // ============ DROP MODAL ============
        
        function openDropModal() {
            if (selectedItems.size === 0) return;
            
            const overlay = document.getElementById('dropModalOverlay');
            const itemsContainer = document.getElementById('dropModalItems');
            
            // Populate items list
            let html = '';
            selectedItems.forEach((item, element) => {
                const qualityClass = 'item-quality-' + (item.data.quality || 'normal').toLowerCase();
                const displayName = item.data.identifiedName || item.data.runewordName || item.data.name;
                html += `
                    <div class="drop-modal-item">
                        <div class="item-icon" style="background-image: url('/items/${item.data.imageName}');"></div>
                        <span class="${qualityClass}">${displayName}</span>
                        <span style="color: #666; font-size: 11px; margin-left: auto;">(${item.stashTab})</span>
                    </div>
                `;
            });
            itemsContainer.innerHTML = html;
            
            overlay.classList.add('visible');
            document.getElementById('dropGameName').focus();
        }

        function closeDropModal() {
            document.getElementById('dropModalOverlay').classList.remove('visible');
            document.getElementById('dropGameName').value = '';
            document.getElementById('dropGamePassword').value = '';
        }

        function closeDropModalOnOverlay(event) {
            if (event.target === event.currentTarget) {
                closeDropModal();
            }
        }

        async function executeDropRequest() {
            const gameName = document.getElementById('dropGameName').value.trim();
            const password = document.getElementById('dropGamePassword').value.trim();
            
            if (!gameName) {
                alert('Please enter a game name');
                document.getElementById('dropGameName').focus();
                return;
            }
            
            if (!currentCharacter) {
                alert('No character selected');
                return;
            }
            
            // Build custom items list from selection
            // Only items that don't fit into runes/gems/keys go to customItems
            const customItems = [];
            const itemQuantities = {};
            
            selectedItems.forEach((item) => {
                const itemName = item.data.name;
                if (!itemQuantities[itemName]) {
                    itemQuantities[itemName] = 0;
                }
                itemQuantities[itemName]++;
            });
            
            // Build filter with exact quantities
            const filter = {
                enabled: true,
                DropperOnlySelected: true, // Exclusive mode - only drop selected items
                customItems: [],  // Will be populated only for non-rune/gem/key items
                selectedRunes: [],
                selectedGems: [],
                selectedKeyTokens: [],
                allowedQualities: []
            };
            
            // Categorize items into appropriate filter arrays WITH quantity limits
            Object.entries(itemQuantities).forEach(([name, qty]) => {
                const lowerName = name.toLowerCase();
                const normalizedName = lowerName.replace(/\s+/g, ''); // Remove spaces for matching
                
                if (isRune(name)) {
                    // It's a rune - add with quantity limit
                    // Use the original name as the API expects it (e.g., "BerRune" or "berrune")
                    filter.selectedRunes.push({ name: normalizedName, quantity: qty });
                } else if (isGem(name)) {
                    // It's a gem - add with quantity limit
                    filter.selectedGems.push({ name: normalizedName, quantity: qty });
                } else if (isKeyOrToken(name)) {
                    // It's a key or token - add with quantity limit
                    // Normalize to match the format expected by drop filters (e.g., "keyofdestruction")
                    filter.selectedKeyTokens.push({ name: normalizedName, quantity: qty });
                } else {
                    // Other items go to customItems (no quantity support in current API)
                    customItems.push(name);
                }
            });
            
            filter.customItems = customItems;
            
            const requestBody = {
                room: gameName,
                password: password,
                filter: filter
            };
            
            const confirmBtn = document.getElementById('dropConfirmBtn');
            confirmBtn.disabled = true;
            confirmBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Requesting...';
            
            try {
                // Step 1: Queue the drop request
                const dropResponse = await fetch(`/api/Drop/start-Dropper?supervisor=${encodeURIComponent(currentCharacter)}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(requestBody)
                });
                
                if (!dropResponse.ok) {
                    const errorText = await dropResponse.text();
                    throw new Error('Failed to queue drop: ' + errorText);
                }
                
                // Step 2: Start the supervisor (this will work for both online and offline)
                // For online supervisors, this is a no-op; for offline, it starts them
                confirmBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Starting bot...';
                
                const startResponse = await fetch(`/start?characterName=${encodeURIComponent(currentCharacter)}`);
                
                if (!startResponse.ok) {
                    // Check if it's just "already running" which is fine
                    const startError = await startResponse.text();
                    if (!startError.includes('already') && !startError.includes('running')) {
                        console.warn('Start supervisor response:', startError);
                        // Don't throw - the drop request is already queued
                    }
                }
                
                closeDropModal();
                clearSelection();
                toggleSelectionMode(); // Exit selection mode
                showNotification('Drop request queued! The bot will join the game and drop items.', 'success');
                
            } catch (error) {
                console.error('Drop request failed:', error);
                showNotification(error.message || 'Failed to send drop request', 'error');
            } finally {
                confirmBtn.disabled = false;
                confirmBtn.innerHTML = '<i class="bi bi-send"></i> Drop Now';
            }
        }

        function isGem(name) {
            const gemTypes = ['amethyst', 'diamond', 'emerald', 'ruby', 'sapphire', 'topaz', 'skull'];
            const lowerName = name.toLowerCase();
            return gemTypes.some(gem => lowerName.includes(gem));
        }

        function isKeyOrToken(name) {
            // Match both formats: "KeyOfDestruction" and "keyofdestruction"
            const keyTokenPatterns = ['keyofterror', 'keyofhate', 'keyofdestruction', 'tokenofabsolution'];
            const lowerName = name.toLowerCase().replace(/\s+/g, ''); // Remove spaces and lowercase
            return keyTokenPatterns.some(kt => lowerName.includes(kt));
        }

        function isRune(name) {
            // Match rune names like "ElRune", "BerRune", etc.
            const lowerName = name.toLowerCase();
            return lowerName.endsWith('rune');
        }

        function showNotification(message, type) {
            // Create notification element
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 12px 20px;
                border-radius: 8px;
                color: white;
                font-size: 14px;
                z-index: 3000;
                animation: slideIn 0.3s ease;
                ${type === 'success' ? 'background: #4CAF50;' : 'background: #f44336;'}
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'fadeOut 0.3s ease';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Add animation keyframes
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            @keyframes fadeOut {
                from { opacity: 1; }
                to { opacity: 0; }
            }
        `;
        document.head.appendChild(style);

        const tooltip = document.getElementById('item-tooltip');

        function showTooltip(event, element) {
            const itemData = JSON.parse(element.dataset.item);
            tooltip.innerHTML = formatItemTooltip(itemData);
            tooltip.classList.add('visible');
            moveTooltip(event);
        }

        function hideTooltip() {
            tooltip.classList.remove('visible');
        }

        function moveTooltip(event) {
            const x = event.clientX + 15;
            const y = event.clientY + 15;
            
            // Prevent tooltip from going off screen
            const rect = tooltip.getBoundingClientRect();
            const maxX = window.innerWidth - rect.width - 20;
            const maxY = window.innerHeight - rect.height - 20;
            
            tooltip.style.left = Math.min(x, maxX) + 'px';
            tooltip.style.top = Math.min(y, maxY) + 'px';
        }

        function formatItemTooltip(item) {
            let html = '';
            
            // Item name with quality color
            const qualityClass = 'item-quality-' + item.quality.toLowerCase();
            let displayName = item.identifiedName || item.name;
            
            // For runewords, show runeword name
            if (item.isRuneword && item.runewordName) {
                displayName = item.runewordName;
            }
            
            html += `<div class="item-name ${qualityClass}">${displayName}</div>`;
            
            // Base item name for uniques/sets/runewords
            if ((item.quality === 'Unique' || item.quality === 'Set' || item.isRuneword) && item.name !== displayName) {
                html += `<div class="item-type">${item.name}</div>`;
            }
            
            // Defense
            if (item.defense > 0) {
                html += `<div class="stat-line base">Defense: ${item.defense}</div>`;
            }
            
            // Damage
            if (item.minDamage > 0 || item.maxDamage > 0) {
                if (item.minDamage > 0 && item.maxDamage > 0) {
                    html += `<div class="stat-line base">Damage: ${item.minDamage} to ${item.maxDamage}</div>`;
                }
            }
            
            // Durability
            if (item.maxDurability > 0) {
                html += `<div class="stat-line base">Durability: ${item.durability} of ${item.maxDurability}</div>`;
            }
            
            // Level requirement
            if (item.levelReq > 0) {
                html += `<div class="level-req">Required Level: ${item.levelReq}</div>`;
            }
            
            // Stats (filter out already shown stats)
            const shownStatIds = [31, 72, 73, 92]; // Defense, Durability, MaxDurability, Level
            if (item.stats && item.stats.length > 0) {
                html += '<div class="item-stats">';
                for (const stat of item.stats) {
                    if (!shownStatIds.includes(stat.id) && stat.string) {
                        html += `<div class="stat-line">${stat.string}</div>`;
                    }
                }
                html += '</div>';
            }
            
            // Ethereal
            if (item.ethereal) {
                html += `<div class="ethereal">Ethereal (Cannot be Repaired)</div>`;
            }
            
            // Socketed items
            if (item.sockets && item.sockets.length > 0) {
                html += '<div class="sockets">';
                html += `<div style="color: #888; font-size: 11px;">Socketed (${item.sockets.length}):</div>`;
                for (const socketItem of item.sockets) {
                    html += `<div class="socket-item">${socketItem.name}</div>`;
                }
                html += '</div>';
            }
            
            return html;
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(event) {
            const overlay = document.getElementById('dropModalOverlay');
            const isModalOpen = overlay && overlay.classList.contains('visible');
            const searchInput = document.getElementById('globalSearch');
            const runewordSearchInput = document.getElementById('runewordSearch');
            const isSearchFocused = document.activeElement === searchInput || document.activeElement === runewordSearchInput;
            const isInputFocused = document.activeElement.tagName === 'INPUT';
            
            if (event.key === 'Escape') {
                if (isModalOpen) {
                    closeDropModal();
                } else if (selectionMode) {
                    toggleSelectionMode();
                } else if (isSearchFocused) {
                    document.activeElement.blur();
                    clearSearch();
                }
                hideContextMenu();
            }
            
            if (event.key === 'Enter' && isModalOpen) {
                event.preventDefault();
                executeDropRequest();
            }

            // Keyboard shortcuts (only when not typing)
            if (!isInputFocused && !isModalOpen) {
                // / to focus search
                if (event.key === '/') {
                    event.preventDefault();
                    searchInput.focus();
                }
                // S to toggle selection mode
                if (event.key === 's' || event.key === 'S') {
                    event.preventDefault();
                    toggleSelectionMode();
                }
                // 1-4 for stash tabs
                if (event.key >= '1' && event.key <= '4') {
                    const tabs = ['personal', 'shared1', 'shared2', 'shared3'];
                    const tabIndex = parseInt(event.key) - 1;
                    const tabBtn = document.querySelector(`.stash-tab[onclick*="${tabs[tabIndex]}"]`);
                    if (tabBtn) tabBtn.click();
                }
            }
        });

