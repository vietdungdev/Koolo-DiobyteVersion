        function debounce(func, wait) {
            let timeout;
            return function(...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(this, args), wait);
            };
        }

        async function fetchAllArmoryData() {
            if (allArmoryData) return allArmoryData;
            try {
                const response = await fetch('/api/armory/all');
                allArmoryData = await response.json();
                return allArmoryData;
            } catch (error) {
                console.error('Failed to fetch armory data:', error);
                return {};
            }
        }

        async function performSearch() {
            const query = document.getElementById('globalSearch').value.toLowerCase().trim();
            const resultsContainer = document.getElementById('searchResults');
            
            if (query.length < 2) {
                resultsContainer.style.display = 'none';
                return;
            }

            const data = await fetchAllArmoryData();
            const results = [];

            for (const [charName, armory] of Object.entries(data)) {
                // Note: API returns lowercase property names
                const locations = [
                    { items: armory.equipped || [], location: 'Equipped' },
                    { items: armory.inventory || [], location: 'Inventory' },
                    { items: armory.stash || [], location: 'Personal Stash' },
                    { items: armory.sharedStash1 || [], location: 'Shared Stash 1' },
                    { items: armory.sharedStash2 || [], location: 'Shared Stash 2' },
                    { items: armory.sharedStash3 || [], location: 'Shared Stash 3' },
                    { items: armory.cube || [], location: 'Cube' },
                    { items: armory.belt || [], location: 'Belt' },
                ];

                for (const loc of locations) {
                    for (const item of loc.items) {
                        if (matchesSearch(item, query) && matchesFilter(item)) {
                            results.push({
                                item: item,
                                character: charName,
                                location: loc.location
                            });
                        }
                    }
                }
            }

            renderSearchResults(results);
        }

        function matchesSearch(item, query) {
            const searchFields = [
                item.name?.toLowerCase() || '',
                item.identifiedName?.toLowerCase() || '',  // Unique/Set item names
                item.baseName?.toLowerCase() || '',
                item.runewordName?.toLowerCase() || '',    // Runeword names
                (item.stats || []).map(s => s.string?.toLowerCase() || '').join(' ')
            ];
            return searchFields.some(field => field.includes(query));
        }

        function matchesFilter(item) {
            if (activeFilter === 'all') return true;
            if (activeFilter === 'unique') return item.quality === 'Unique';
            if (activeFilter === 'set') return item.quality === 'Set';
            if (activeFilter === 'runeword') return item.isRuneword;
            if (activeFilter === 'rune') return item.name?.toLowerCase().endsWith('rune');
            if (activeFilter === 'charm') return item.name?.toLowerCase().includes('charm');
            if (activeFilter === 'jewelry') return ['ring', 'amulet'].some(t => item.name?.toLowerCase().includes(t));
            return true;
        }

        function renderSearchResults(results) {
            const container = document.getElementById('searchResults');
            
            if (results.length === 0) {
                container.innerHTML = '<div style="color: #888; text-align: center; padding: 20px;">No items found</div>';
                container.style.display = 'block';
                return;
            }

            container.innerHTML = results.slice(0, 50).map(r => {
                const escapedItem = escapeHtmlAttr(JSON.stringify(r.item));
                // Show identifiedName for unique/set, runewordName for runewords, else base name
                const displayName = r.item.identifiedName || r.item.runewordName || r.item.name;
                return `
                <div class="search-result-item" onclick="goToCharacter('${r.character}')" data-item='${escapedItem}'
                     oncontextmenu="showItemContextMenu(event, this)">
                    <div class="search-result-icon" style="background-image: url('/items/${r.item.imageName || 'unknown.png'}');"></div>
                    <div class="search-result-info">
                        <div class="search-result-name item-quality-${(r.item.quality || 'normal').toLowerCase()}">${escapeHtml(displayName)}</div>
                        <div class="search-result-location">${r.location}</div>
                    </div>
                    <span class="search-result-character">${r.character}</span>
                </div>
                `;
            }).join('');
            
            if (results.length > 50) {
                container.innerHTML += `<div style="color: #888; text-align: center; padding: 10px; font-size: 12px;">...and ${results.length - 50} more results</div>`;
            }
            
            container.style.display = 'block';
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text || '';
            return div.innerHTML;
        }

        function escapeHtmlAttr(text) {
            return text.replace(/'/g, '&#39;').replace(/"/g, '&quot;');
        }

        function clearSearch() {
            document.getElementById('globalSearch').value = '';
            document.getElementById('searchResults').style.display = 'none';
        }

        function goToCharacter(name) {
            window.location.href = '/armory?character=' + encodeURIComponent(name);
