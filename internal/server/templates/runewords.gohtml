                typeToggle.style.padding = '0.45rem 0.6rem';
                typeToggle.style.minHeight = '2.4rem';
                typeToggle.style.fontSize = '0.9rem';
                typeToggle.style.marginBottom = '0';
                typeToggle.style.border = '1px solid #3a3f4f';
                typeToggle.style.borderRadius = '6px';
                typeToggle.style.background = 'rgba(15, 18, 28, 0.6)';
                typeToggle.style.color = '#f5f7ff';

                const typeSummary = document.createElement('span');
                typeSummary.textContent = 'Any';

                const typeCaret = document.createElement('span');
                typeCaret.style.opacity = '0.7';
                typeCaret.innerHTML = '&#9662;';

                typeToggle.appendChild(typeSummary);
                typeToggle.appendChild(typeCaret);

                const typePanel = document.createElement('div');
                typePanel.style.display = 'none';
                typePanel.style.marginTop = '6px';
                typePanel.style.padding = '6px';
                typePanel.style.background = 'rgba(0,0,0,0.2)';
                typePanel.style.borderRadius = '4px';
                typePanel.style.border = '1px solid #333';
                typePanel.style.maxHeight = '220px';
                typePanel.style.overflow = 'auto';

                const typeContainer = document.createElement('div');
                typeContainer.className = 'rr-base-type-container';
                typeContainer.style.display = 'flex';
                typeContainer.style.flexWrap = 'wrap';
                typeContainer.style.gap = '8px';

                typePanel.appendChild(typeContainer);
                typeWrap.appendChild(typeToggle);
                typeWrap.appendChild(typePanel);
                typeLabel.appendChild(typeWrap);

                const typeHidden = document.createElement('input');
                typeHidden.type = 'hidden';
                typeHidden.className = 'rr-base-type';
                typeLabel.appendChild(typeHidden);

                row2.appendChild(typeLabel);

                const tierLabel = document.createElement('label');
                tierLabel.innerHTML = 'Base tier<select class="rr-base-tier">' +
                    '<option value="">Any</option>' +
                    '<option value="normal">Normal</option>' +
                    '<option value="exceptional">Exceptional</option>' +
                    '<option value="elite">Elite</option>' +
                    '</select>';
                row2.appendChild(tierLabel);

                body.appendChild(row2);

                const initialTypeCSV = rule && rule.BaseType ? rule.BaseType : '';
                const savedTypes = initialTypeCSV
                    .split(',')
                    .map(function (s) { return s.trim(); })
                    .filter(function (s) { return s.length > 0; });
                typeHidden.value = savedTypes.join(',');

                function updateTypeSummary(checked) {
                    if (!typeSummary) {
                        return;
                    }
                    if (!checked || checked.length === 0) {
                        typeSummary.textContent = 'Any';
                        return;
                    }
                    const labels = Array.from(checked).map(function (cb) {
                        return cb.dataset.label || cb.value;
                    });
                    if (labels.length <= 2) {
                        typeSummary.textContent = labels.join(', ');
                        return;
                    }
                    typeSummary.textContent = String(labels.length) + ' selected';
                }

                function updateTypeHiddenFromChecks() {
                    const checked = typeContainer.querySelectorAll('input[type="checkbox"]:checked');
                    const values = Array.from(checked).map(function (cb) { return cb.value; });
                    typeHidden.value = values.join(',');
                    updateTypeSummary(checked);
                    refreshBaseSelect();
                }

                typeToggle.addEventListener('click', function (e) {
                    e.stopPropagation();
                    const open = typePanel.style.display === 'none';
                    typePanel.style.display = open ? '' : 'none';
                });
                document.addEventListener('click', function (e) {
                    if (typePanel.style.display === 'none') {
                        return;
                    }
                    if (typePanel.contains(e.target) || typeToggle.contains(e.target)) {
                        return;
                    }
                    typePanel.style.display = 'none';
                });

                if (Array.isArray(baseTypes)) {
                    baseTypes.forEach(function(bt) {
                        const label = document.createElement('label');
                        label.style.cssText = 'display: flex; align-items: center; gap: 4px; margin: 0; font-size: 0.85em; cursor: pointer; padding: 2px 6px; background: rgba(255,255,255,0.05); border-radius: 3px;';

                        const cb = document.createElement('input');
                        cb.type = 'checkbox';
                        cb.value = bt.code;
                        cb.dataset.label = bt.label;
                        cb.checked = savedTypes.indexOf(bt.code) !== -1;
                        cb.addEventListener('change', updateTypeHiddenFromChecks);

                        const span = document.createElement('span');
                        span.textContent = bt.label;

                        label.appendChild(cb);
                        label.appendChild(span);
                        typeContainer.appendChild(label);
                    });
                }

                const tierSelect = tierLabel.querySelector('select.rr-base-tier');
                if (rule && rule.BaseTier) {
                    tierSelect.value = rule.BaseTier;
                }

                // Row 3: Base name (optional)
                const baseRow = document.createElement('div');
                baseRow.className = 'grid';

                const baseLabel = document.createElement('label');
                const baseTitle = document.createElement('span');
                baseTitle.textContent = 'Base (optional)';
                baseLabel.appendChild(baseTitle);

                const baseControlRow = document.createElement('div');
                baseControlRow.style.display = 'flex';
                baseControlRow.style.alignItems = 'center';
                baseControlRow.style.gap = '6px';
                baseControlRow.style.marginTop = '4px';

                const baseSelect = document.createElement('select');
                baseSelect.className = 'rr-base-name-select';
                baseSelect.style.minWidth = '160px';

                const baseAddBtn = document.createElement('button');
                baseAddBtn.type = 'button';
                baseAddBtn.className = 'secondary rr-btn-add';
                baseAddBtn.textContent = 'Add';

                baseControlRow.appendChild(baseSelect);
                baseControlRow.appendChild(baseAddBtn);

                const baseTags = document.createElement('div');
                baseTags.className = 'rr-base-name-tags';
                baseTags.style.display = 'flex';
                baseTags.style.flexWrap = 'wrap';
                baseTags.style.gap = '4px 8px';
                baseTags.style.marginTop = '4px';

                const baseHidden = document.createElement('input');
                baseHidden.type = 'hidden';
                baseHidden.className = 'rr-base-name';

                baseLabel.appendChild(baseControlRow);
                baseLabel.appendChild(baseTags);
                baseLabel.appendChild(baseHidden);
                baseRow.appendChild(baseLabel);

                body.appendChild(baseRow);

                const initialBaseCSV = rule && rule.BaseName ? rule.BaseName : '';
                const selectedBases = initialBaseCSV
                    .split(',')
                    .map(function (s) { return s.trim(); })
                    .filter(function (s) { return s.length > 0; });

                let currentBases = [];

                function syncHidden(codes) {
                    baseHidden.value = codes.join(',');
                }

                function renderBaseTags() {
                    baseTags.innerHTML = '';
                    selectedBases.forEach(function (code) {
                        const base = currentBases.find(function (b) { return b.code === code; }) || null;
                        const label = base ? base.name : code;

                        const tag = document.createElement('span');
                        tag.style.display = 'inline-flex';
                        tag.style.alignItems = 'center';
                        tag.style.gap = '4px';
                        tag.style.padding = '2px 6px';
                        tag.style.borderRadius = '10px';
                        tag.style.border = '1px solid #4ac3ff';
                        tag.style.backgroundColor = 'rgba(74, 195, 255, 0.08)';

                        const text = document.createElement('span');
                        text.textContent = label;

                        const removeBtn = document.createElement('button');
                        removeBtn.type = 'button';
                        removeBtn.textContent = '';
                        removeBtn.className = 'secondary';
                        removeBtn.style.padding = '0 4px';
                        removeBtn.style.lineHeight = '1';
                        removeBtn.addEventListener('click', function () {
                            const idx = selectedBases.indexOf(code);
                            if (idx !== -1) {
                                selectedBases.splice(idx, 1);
                                syncHidden(selectedBases);
                                renderBaseTags();
                            }
                        });

                        tag.appendChild(text);
                        tag.appendChild(removeBtn);
                        baseTags.appendChild(tag);
                    });
                    syncHidden(selectedBases);
                }

                function refreshBaseSelect() {
                    const selectedTypeCSV = typeHidden ? typeHidden.value : '';
                    const selectedType = selectedTypeCSV.split(',').map(function (s) { return s.trim(); }).filter(function (s) { return s.length > 0; })[0] || '';
                    const selectedTier = tierSelect ? tierSelect.value : '';

                    baseSelect.innerHTML = '';
                    const placeholder = document.createElement('option');
                    placeholder.value = '';
                    placeholder.textContent = selectedBases.length > 0 ? 'Select another base...' : 'Select base...';
                    baseSelect.appendChild(placeholder);

                    loadBases(runewordName, selectedType, selectedTier).then(function (bases) {
                        if (!Array.isArray(bases)) {
                            bases = [];
                        }
                        currentBases = bases;

                        bases.forEach(function (b) {
                            const opt = document.createElement('option');
                            opt.value = b.code;
                            opt.textContent = b.name;
                            baseSelect.appendChild(opt);
                        });

                        renderBaseTags();
                    }).catch(function () {
                        currentBases = [];
                        renderBaseTags();
                    });
                }

                if (tierSelect) {
                    tierSelect.addEventListener('change', refreshBaseSelect);
                }

                if (baseAddBtn) {
                    baseAddBtn.addEventListener('click', function () {
                        const code = baseSelect.value;
                        if (!code) {
                            return;
                        }
                        if (selectedBases.indexOf(code) !== -1) {
                            return;
                        }
                        selectedBases.push(code);
                        syncHidden(selectedBases);
                        renderBaseTags();
                    });
                }

                updateTypeHiddenFromChecks();

                // Stats grid
                const statsWrapper = document.createElement('div');
                statsWrapper.style.marginTop = '6px';

                if (!Array.isArray(rolls) || rolls.length === 0) {
                    const noStats = document.createElement('small');
                    noStats.textContent = 'No rollable stats available for this runeword.';
                    statsWrapper.appendChild(noStats);
                } else {
                    const info = document.createElement('small');
                    info.textContent = 'Adjust the target stats for rerolls. Unchanged values will default to minimum stats';
                    statsWrapper.appendChild(info);

                    const grid = document.createElement('div');
                    grid.className = 'grid';
                    grid.style.marginTop = '4px';

                    const targetMap = {};
                    if (rule && Array.isArray(rule.TargetStats)) {
                        rule.TargetStats.forEach(function(ts) {
                            var key = makeStatKey(ts.StatID, ts.Layer || 0, ts.Group || '');
                            targetMap[key] = { min: ts.Min, group: ts.Group || '' };
                        });
                    }

                    rolls.forEach(function(roll) {
                        const groupTag = roll.group || GROUP_SINGLE;
                        var key = makeStatKey(roll.statId, roll.layer || 0, groupTag);

                        var entry = targetMap[key];
                        if (!entry) {
                            entry = targetMap[makeStatKey(roll.statId, roll.layer || 0, '')];
                        }

                        var defaultMin = entry ? entry.min : Math.floor(roll.min);

                        const row = document.createElement('div');
                        row.className = 'rw-target-row';

                        row.innerHTML =
                            '<label class="rw-stat-label">' +
                            escapeHtml(roll.label) +
                            '</label>' +
                            '<label class="rw-min-label">' +
                            'Min value [' + roll.min + ' - ' + roll.max + ']' +
                            '<input type="number" class="rr-stat-min" min="' + String(roll.min) + '" max="' + String(roll.max) + '" value="' + String(defaultMin) + '" ' +
                            'data-stat-id="' + String(roll.statId) + '" data-layer="' + String(roll.layer || 0) + '" data-group="' + groupTag + '" />' +
                            '</label>';

                        grid.appendChild(row);

                        const statInput = row.querySelector('input.rr-stat-min');
                        if (statInput) {
                            const rollMinValue = Number(roll.min);
                            const rollMaxValue = Number(roll.max);
                            const baseMinValue = Number.isFinite(rollMinValue) ? Math.floor(rollMinValue) : 0;
                            if (Number.isFinite(rollMaxValue)) {
                                statInput.setAttribute('data-max', String(Math.floor(rollMaxValue)));
                            }
                            statInput.setAttribute('data-base-min', String(baseMinValue));
                            statInput.setAttribute('data-label', roll.label || 'Stat');
                        }
                    });

                    statsWrapper.appendChild(grid);
                }

                body.appendChild(statsWrapper);
                container.appendChild(body);

                header.addEventListener('click', function(event) {
                    if (event.target === actionBtn) {
                        return;
                    }
                    container.classList.toggle('collapsed');
                });

                return container;
            }

            function renumberRules() {
                if (!rerollRulesContainer) return;
                const blocks = rerollRulesContainer.querySelectorAll('.rr-rule');
                blocks.forEach(function(block, idx) {
                    const strong = block.querySelector('strong');
                    if (strong) {
                        strong.textContent = 'Rule #' + (idx + 1);
                    }
                });
            }

            function collectRulesFromDOM() {
                const result = [];
                if (!rerollRulesContainer) return result;

                const blocks = rerollRulesContainer.querySelectorAll('.rr-rule');
                blocks.forEach(function(block) {
                    const ethSelect = block.querySelector('select.rr-eth-mode');
                    const qualSelect = block.querySelector('select.rr-quality-mode');
                    const baseTypeHidden = block.querySelector('input.rr-base-type');
                    const tierSelect = block.querySelector('select.rr-base-tier');
                    const baseHidden = block.querySelector('input.rr-base-name');

                    const ethMode = ethSelect ? ethSelect.value : '';
                    const qualityMode = qualSelect ? qualSelect.value : '';
                    const baseType = baseTypeHidden ? baseTypeHidden.value : '';
                    const baseTier = tierSelect ? tierSelect.value : '';
                    const baseName = baseHidden ? baseHidden.value : '';

                    const stats = [];
                const inputs = block.querySelectorAll('input.rr-stat-min');
                inputs.forEach(function(input) {
                    const raw = input.value;
                    let v = parseInt(raw, 10);
                    if (isNaN(v) || v <= 0) {
                        return; // ignore zeros / invalid values
                    }
                    const baseMinAttr = parseFloat(input.getAttribute('data-base-min') || '0');
                    const maxAttr = parseFloat(input.getAttribute('data-max') || '0');
                    if (!isNaN(baseMinAttr) && v === baseMinAttr) {
                        return; // unchanged from base min; don't save
                    }
                    if (!isNaN(baseMinAttr) && v < baseMinAttr) {
                        v = Math.floor(baseMinAttr);
                    }
                    if (!isNaN(maxAttr) && maxAttr > 0 && v > maxAttr) {
                        v = Math.floor(maxAttr);
                    }
                    const statId = parseInt(input.getAttribute('data-stat-id') || '0', 10);
                    const layer = parseInt(input.getAttribute('data-layer') || '0', 10);
                    const group = input.getAttribute('data-group') || GROUP_SINGLE;
                        stats.push({ StatID: statId, Layer: layer, Min: v, Group: group });
                    });

                    result.push({ EthMode: ethMode, QualityMode: qualityMode, BaseType: baseType, BaseTier: baseTier, BaseName: baseName, TargetStats: stats });
                });

                return result;
            }

            function syncRerollSectionVisibility(enabled) {
                if (!rerollSection) return;
                rerollSection.style.display = enabled ? '' : 'none';
                if (!enabled) {
                    clearRerollTargetSummary();
                }
            }

            function renderRerollRulesForCurrent(name) {
                if (!rerollRulesContainer || !name) return;

                rerollRulesContainer.innerHTML = '';
                clearRerollTargetSummary();
                const existing = (rerollRulesMap && rerollRulesMap[name]) ? rerollRulesMap[name] : [];
                const hasRules = Array.isArray(existing) && existing.length > 0;

                if (!rerollEnabledToggle) return;

                rerollEnabledToggle.checked = hasRules;
                if (!hasRules) {
                    syncRerollSectionVisibility(false);
                    return;
                }

                syncRerollSectionVisibility(true);

                Promise.all([loadRolls(name), loadBaseTypes(name)])
                    .then(function (all) {
                        var rolls = all[0] || [];
                        var baseTypes = all[1] || [];

                        existing.forEach(function (rule, idx) {
                            const block = buildRerollRuleBlock(idx, rule, rolls, baseTypes, name);
                            rerollRulesContainer.appendChild(block);
                        });
                        renumberRules();
                        updateRerollTargetSummary();
                    })
                    .catch(function () {
                        // ignore
                        updateRerollTargetSummary();
                    });
            }

            function addRuleBlockForCurrent(name, rule) {
                if (!rerollRulesContainer || !name) return;

                const index = rerollRulesContainer.querySelectorAll('.rr-rule').length;

                Promise.all([loadRolls(name), loadBaseTypes(name)])
                    .then(function (all) {
                        var rolls = all[0] || [];
                        var baseTypes = all[1] || [];

                        const block = buildRerollRuleBlock(index, rule || null, rolls, baseTypes, name);
                        rerollRulesContainer.appendChild(block);
                        renumberRules();
                        updateRerollTargetSummary();
                    })
                    .catch(function () {
                        // ignore
                        updateRerollTargetSummary();
                    });
            }

            function buildDefaultRuleFromCurrent() {
                const name = currentNameInput ? currentNameInput.value : '';
                if (!name) return null;

                return {
                    EthMode: ethModeSelect ? (ethModeSelect.value || 'any') : 'any',
                    QualityMode: qualityModeSelect ? (qualityModeSelect.value || 'any') : 'any',
                    BaseType: baseTypeInput ? (baseTypeInput.value || '') : '',
                    BaseTier: baseTierSelect ? (baseTierSelect.value || '') : '',
                    BaseName: baseNameInput ? (baseNameInput.value || '') : '',
                    TargetStats: []
                };
            }

            // Simple HTML escaping for labels
            function escapeHtml(str) {
                if (str == null) return '';
                return String(str)
                    .replace(/&/g, '&amp;')
                    .replace(/</g, '&lt;')
                    .replace(/>/g, '&gt;')
                    .replace(/"/g, '&quot;')
                    .replace(/'/g, '&#39;');
            }

            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    filterList(searchInput.value);
                });
            }

            if (baseTypeToggle && baseTypePanel) {
                baseTypeToggle.addEventListener('click', function (e) {
                    e.stopPropagation();
                    const open = baseTypePanel.style.display === 'none';
                    baseTypePanel.style.display = open ? '' : 'none';
                });
                document.addEventListener('click', function (e) {
                    if (baseTypePanel.style.display === 'none') {
                        return;
                    }
                    if (baseTypePanel.contains(e.target) || baseTypeToggle.contains(e.target)) {
                        return;
                    }
                    baseTypePanel.style.display = 'none';
                });
            }

            if (optionsToggle) {
                setOptionsPanelOpen(shouldAutoOpenOptions());
                optionsToggle.addEventListener('click', function () {
                    const open = optionsPanel && optionsPanel.style.display === 'none';
                    setOptionsPanelOpen(!!open);
                });
            }

            items.forEach((el) => {
                const checkbox = el.querySelector('input[type="checkbox"]');
                const favBtn = el.querySelector('.rw-fav-btn');
                if (favBtn) {
                    const name = el.dataset.runewordName || '';
                    if (el.dataset.favorite === '1') {
                        favoriteSet.add(name);
                    }
                    setFavoriteUI(name, favoriteSet.has(name));
                    favBtn.addEventListener('click', function (e) {
                        e.stopPropagation();
                        const current = el.dataset.runewordName || '';
                        if (!current) {
                            return;
                        }
                        const next = !favoriteSet.has(current);
                        if (next) {
                            favoriteSet.add(current);
                        } else {
                            favoriteSet.delete(current);
                        }
                        setFavoriteUI(current, next);
                        sortByEnabled();
                    });
                }

                el.addEventListener('click', function(e) {
                    // ignore direct clicks on the checkbox so it can toggle independently
                    if (e.target && e.target.tagName === 'INPUT') {
                        return;
                    }
                    const name = el.dataset.runewordName;
                    if (!name) {
                        return;
                    }

                    items.forEach(function(item) { item.classList.remove('selected'); });
                    el.classList.add('selected');

                    if (detailEmpty) {
                        detailEmpty.style.display = 'none';
                    }
                    if (detailPanel) {
                        detailPanel.style.display = '';
                    }
                    if (detailTitle) {
                        const runeLabel = runewordRuneNames && runewordRuneNames[name];
                        let html = '<span style="font-size: 1.4rem; font-weight: 600;">' + name + '</span>';
                        if (runeLabel) {
                            html += ' <span style="font-size: 0.85rem; color: #aaa;">(' + runeLabel + ')</span>';
                        }
                        detailTitle.innerHTML = html;
                    }
                    if (detailFavBtn) {
                        setFavButtonState(detailFavBtn, favoriteSet.has(name));
                    }
                    if (currentNameInput) {
                        currentNameInput.value = name;
                    }

                    const ov = overridesMap ? overridesMap[name] : null;

                    if (ethModeSelect) {
                        ethModeSelect.value = (ov && ov.EthMode) ? ov.EthMode : 'any';
                    }
                    if (qualityModeSelect) {
                        qualityModeSelect.value = (ov && ov.QualityMode) ? ov.QualityMode : 'any';
                    }
                    if (baseTierSelect) {
                        baseTierSelect.value = (ov && ov.BaseTier) ? ov.BaseTier : '';
                    }
                    if (baseNameInput) {
                        baseNameInput.value = (ov && ov.BaseName) ? ov.BaseName : '';
                    }

                    if (enabledToggle && checkbox) {
                        enabledToggle.checked = checkbox.checked;
                    }

                    // --- Embedded reroll UI: render existing rules as editable cards ---
                    if (rerollRulesContainer) {
                        rerollRulesContainer.innerHTML = '';
                    }
                    clearRerollTargetSummary();

                    const isRerollable = rerollableMap && Object.prototype.hasOwnProperty.call(rerollableMap, name) ? !!rerollableMap[name] : false;
                    if (rerollEnabledLabel) {
                        // Hide the entire "Enabled reroll" control when not applicable
                        rerollEnabledLabel.style.display = isRerollable ? '' : 'none';
                    }

                    if (!isRerollable) {
                        if (rerollEnabledToggle) {
                            rerollEnabledToggle.checked = false;
                            rerollEnabledToggle.disabled = true;
                        }
                        syncRerollSectionVisibility(false);
                    } else {
                        if (rerollEnabledToggle) {
                            rerollEnabledToggle.disabled = false;
                        }
                        renderRerollRulesForCurrent(name);
                    }

                    // Load base item types for this runeword into checkboxes
                    if (baseTypeContainer && baseTypeInput) {
                        baseTypeContainer.innerHTML = '';

                        // Helper to update hidden input from checked boxes
                        function updateBaseTypeInput() {
                            var checked = baseTypeContainer.querySelectorAll('input[type="checkbox"]:checked');
                            var values = Array.from(checked).map(function(cb) { return cb.value; });
                            baseTypeInput.value = values.join(',');
                            // Update base names when selection changes
                            updateBaseNames();
                            updateBaseTypeSummary(checked);
                        }

                        fetch('/api/runewords/base-types?name=' + encodeURIComponent(name))
                            .then(function(resp) { return resp.json(); })
                            .then(function(bases) {
                                if (!Array.isArray(bases) || bases.length === 0) {
                                    baseTypeContainer.innerHTML = '<span style="color: #888; font-size: 0.85em;">No base types available</span>';
                                    updateBaseTypeSummary([]);
                                    return;
                                }

                                const ov = overridesMap ? overridesMap[name] : null;
                                let savedBaseTypes = ov && ov.BaseType ? ov.BaseType.split(',').map(function(s) { return s.trim(); }) : [];

                                bases.forEach(function(bt) {
                                    var label = document.createElement('label');
                                    label.style.cssText = 'display: flex; align-items: center; gap: 4px; margin: 0; font-size: 0.85em; cursor: pointer; padding: 2px 6px; background: rgba(255,255,255,0.05); border-radius: 3px;';

                                    var cb = document.createElement('input');
                                    cb.type = 'checkbox';
                                    cb.value = bt.code;
                                    cb.dataset.label = bt.label;
                                    cb.checked = savedBaseTypes.indexOf(bt.code) !== -1;
                                    cb.addEventListener('change', updateBaseTypeInput);

                                    var span = document.createElement('span');
                                    span.textContent = bt.label;

                                    label.appendChild(cb);
                                    label.appendChild(span);
                                    baseTypeContainer.appendChild(label);
                                });

                                // Set initial hidden input value
                                updateBaseTypeInput();
                            })
                            .catch(function() {
                                baseTypeContainer.innerHTML = '<span style="color: #888; font-size: 0.85em;">Failed to load base types</span>';
                                updateBaseTypeSummary([]);
                            });
                    }
                    // TODO: load saved override values for this runeword into the fields.
                });

                if (checkbox) {
                    checkbox.addEventListener('change', function() {
                        if (enabledToggle && currentNameInput && currentNameInput.value === el.dataset.runewordName) {
                            enabledToggle.checked = checkbox.checked;
                        }
                        sortByEnabled();
                    });
                }
            });

            if (enabledToggle) {
                enabledToggle.addEventListener('change', function() {
                    const name = currentNameInput ? currentNameInput.value : '';
                    const item = findItemByName(name);
                    if (!item) {
                        return;
                    }
                    const cb = item.querySelector('input[type="checkbox"]');
                    if (cb) {
                        cb.checked = enabledToggle.checked;
                    }
                    sortByEnabled();
                });
            }

            if (detailFavBtn) {
                detailFavBtn.addEventListener('click', function (e) {
                    e.stopPropagation();
                    const current = currentNameInput ? currentNameInput.value : '';
                    if (!current) {
                        return;
                    }
                    const next = !favoriteSet.has(current);
                    if (next) {
                        favoriteSet.add(current);
                    } else {
                        favoriteSet.delete(current);
                    }
                    setFavoriteUI(current, next);
                    sortByEnabled();
                });
            }

            // Base type change handler is now attached to checkboxes in the loadBaseTypes code

            if (baseTierSelect) {
                baseTierSelect.addEventListener('change', function () {
                    updateBaseNames();
                });
            }

            // Reroll enable toggle controls visibility and can create a default rule.
            if (rerollEnabledToggle && rerollSection) {
                rerollEnabledToggle.addEventListener('change', function () {
                    const enabled = !!rerollEnabledToggle.checked;
                    const name = currentNameInput ? currentNameInput.value : '';

                    if (!enabled) {
                        syncRerollSectionVisibility(false);
                        if (rerollRulesContainer) {
                            rerollRulesContainer.innerHTML = '';
                        }
                        if (rerollRulesJSONInput) {
                            rerollRulesJSONInput.value = '';
                        }
                        return;
                    }

                    syncRerollSectionVisibility(true);

                    if (!name) {
                        return;
                    }

                    const existing = (rerollRulesMap && rerollRulesMap[name]) ? rerollRulesMap[name] : [];
                    const hasExisting = Array.isArray(existing) && existing.length > 0;

                    if (hasExisting) {
                        renderRerollRulesForCurrent(name);
                    } else if (rerollRulesContainer) {
                        const defaultRule = buildDefaultRuleFromCurrent();
                        if (defaultRule) {
                            addRuleBlockForCurrent(name, defaultRule);
                        }
                    }
                });
            }

            if (rerollAddRuleBtn) {
                rerollAddRuleBtn.addEventListener('click', function () {
                    const name = currentNameInput ? currentNameInput.value : '';
                    if (!name) return;

                    const rule = buildDefaultRuleFromCurrent();
                    addRuleBlockForCurrent(name, rule);
                    if (rerollEnabledToggle) {
                        rerollEnabledToggle.checked = true;
                    }
                    syncRerollSectionVisibility(true);
                });
            }

            if (rerollHistoryBtn) {
                rerollHistoryBtn.addEventListener('click', function () {
                    openHistoryModal();
                });
            }

            if (historyAllToggle) {
                historyAllToggle.addEventListener('change', function () {
                    const currentName = currentNameInput ? currentNameInput.value : '';
                    const showAll = !!historyAllToggle.checked;
                    setHistoryColumns(showAll, currentName);
                    renderHistory(showAll);
                });
            }

            if (historyCloseBtn) {
                historyCloseBtn.addEventListener('click', function () {
                    closeHistoryModal();
                });
            }

            if (historyClearBtn) {
                historyClearBtn.addEventListener('click', function () {
                    rerollHistoryCache = [];
                    rerollHistoryLoaded = true;
                    saveHistoryToStorage([]);
                    renderHistory(!!(historyAllToggle && historyAllToggle.checked));
                });
            }

            if (historyBackdrop) {
                historyBackdrop.addEventListener('click', function () {
                    closeHistoryModal();
                });
            }

            function startHistoryAutoSync() {
                loadRerollHistory(true);
                setInterval(function () {
                    if (document.hidden) {
                        return;
                    }
                    loadRerollHistory(true);
                }, 60000);
            }

            document.addEventListener('keydown', function (event) {
                if (event.key === 'Escape') {
                    closeHistoryModal();
                }
            });

            const form = document.querySelector('form');
            if (form && rerollRulesJSONInput && rerollEnabledToggle) {
                form.addEventListener('submit', function (event) {
                    const name = currentNameInput ? currentNameInput.value : '';
                    if (!name) {
                        rerollRulesJSONInput.value = '';
                        return;
                    }
                    if (!rerollEnabledToggle.checked) {
                        rerollRulesJSONInput.value = '';
                        return;
                    }

                    const rules = collectRulesFromDOM();
                    const hasTargetStats = Array.isArray(rules) && rules.some(function(rule) {
                        return Array.isArray(rule.TargetStats) && rule.TargetStats.length > 0;
                    });
                    if (!hasTargetStats) {
                        if (event && typeof event.preventDefault === 'function') {
                            event.preventDefault();
                        }
                        alert('No reroll target stats configured. Please set at least one stat above its minimum before saving.');
                        return;
                    }

                    rerollRulesJSONInput.value = JSON.stringify(rules || []);
                });
            }

            if (form && saveBtn) {
                form.addEventListener('submit', function (event) {
                    if (event.defaultPrevented) {
                        return;
                    }
                    saveBtn.disabled = true;
                    saveBtn.value = 'Saving...';
                    saveBtn.style.opacity = '0.6';
                    saveBtn.style.cursor = 'not-allowed';
                });
            }

            if (savedFlag && toast) {
                toast.classList.add('show');
                setTimeout(function () {
                    toast.classList.remove('show');
                }, 2400);
            }

            // Initial sort so enabled runewords appear first
            sortByEnabled();
            markRunewordsWithRerollBadges();
            startHistoryAutoSync();
        })();
    </script>
</main>
</body>
</html>
