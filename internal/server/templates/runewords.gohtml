{{$topLevelContext := .}}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="dark"/>
    <link rel="stylesheet" href="../assets/css/pico.min.css">
    <link rel="stylesheet" href="../assets/css/custom.css">
    <link rel="stylesheet" href="../assets/css/bootstrap-icons.css">
    <style>
        .runeword-list-item.selected {
            background-color: rgba(100, 150, 255, 0.25);
            border-radius: 4px;
        }

        .rw-btn-add {
            background-color: #1a5fff;
            border-color: #4a8dff;
            color: #fff;
        }

        .rw-btn-add:hover {
            background-color: #2a6fff;
            border-color: #5b9bff;
            color: #fff;
        }

        #rwRerollSection strong {
            font-size: 1.05em;
            letter-spacing: 0.02em;
        }

        /* Keep base Add button inline to the right of the select */
        .rw-base-add-btn {
            width: auto;
            flex: 0 0 auto;
        }

        /* Reroll rule card styles (aligned with reroll page) */
        .rr-rule {
            margin-bottom: 8px;
            background-color: rgba(255, 255, 255, 0.02);
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #333;
            transition: background-color 0.15s ease, border-color 0.15s ease, box-shadow 0.15s ease;
        }

        .rr-rule[data-editor="false"] {
            background-color: rgba(128, 128, 128, 0.1);
            border-color: #555;
        }

        .rr-rule[data-editor="true"] {
            border-style: dashed;
            opacity: 0.95;
        }

        .rr-rule-header {
            cursor: pointer;
        }

        .rr-rule.collapsed .rr-rule-body {
            display: none;
        }

        .rr-rule-status {
            font-size: 0.7em;
            padding: 2px 6px;
            border-radius: 999px;
            border: 1px solid #4ac3ff;
            color: #4ac3ff;
            margin-right: 4px;
        }

        .rr-btn-add {
            background-color: #1a5fff;
            border-color: #4a8dff;
            color: #fff;
        }

        .rr-btn-add:hover {
            background-color: #2a6fff;
            border-color: #5b9bff;
            color: #fff;
        }

        .rr-btn-remove {
            background-color: #8b1f1f;
            border-color: #ff5c5c;
            color: #fff;
        }

        .rr-btn-remove:hover {
            background-color: #a62828;
            border-color: #ff7575;
            color: #fff;
        }

        /* Reroll stat rows styling (match reroll page emphasis) */
        .rw-target-row .rw-stat-label {
            font-weight: 600;
        }

        .rw-target-row .rw-min-label {
            font-size: 0.85em;
            color: #aaa;
        }

        .rw-header {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
        }

        .rw-back-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.25rem 0.6rem;
            line-height: 1;
            min-height: 0;
            margin-bottom: 0;
        }

        .runeword-list-item {
            display: flex;
            align-items: center;
            gap: 6px;
        }
        .rw-fav-btn {
            border: none;
            background: transparent;
            color: #8b95a1;
            cursor: pointer;
            font-size: 1.15rem;
            line-height: 1;
            padding: 0 2px;
            margin-bottom: 0.5rem;
        }
        .rw-fav-btn.active {
            color: #f2c94c;
        }

        .rw-reroll-badge {
            margin-left: auto;
            width: 16px;
            height: 16px;
            border-radius: 999px;
            background-color: rgba(90, 180, 255, 0.22);
            align-items: center;
            justify-content: center;
            display: none;
        }

        .rw-reroll-badge i {
            font-size: 0.8em;
        }

        .rw-reroll-target-summary {
            font-size: 0.9rem;
            color: #aaa;
            font-weight: 600;
        }

        /* Hide scrollbar for runeword list but allow scrolling */
        #rw-list::-webkit-scrollbar {
            display: none;
        }
        #rw-list {
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }

        .rw-history-modal {
            position: fixed;
            inset: 0;
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 999;
        }

        .rw-history-backdrop {
            position: absolute;
            inset: 0;
            background: rgba(10, 12, 18, 0.75);
        }

        .rw-history-panel {
            position: relative;
            z-index: 1;
            width: min(1100px, 92vw);
            max-height: 80vh;
            background: rgba(26, 32, 45, 0.98);
            border: 1px solid #3a3f4f;
            border-radius: 10px;
            padding: 16px 18px;
            display: flex;
            flex-direction: column;
            gap: 12px;
            box-shadow: 0 16px 40px rgba(0, 0, 0, 0.35);
        }

        .rw-history-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
        }

        .rw-history-title {
            font-size: 1.2rem;
            font-weight: 600;
        }

        .rw-history-subtitle {
            font-size: 0.85rem;
            color: #d8dee9;
        }

        .rw-history-controls {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
            padding: 8px 10px;
            border-radius: 8px;
            background: rgba(60, 70, 92, 0.35);
            border: 1px solid #3a4358;
            color: #e6ebf5;
        }

        .rw-history-controls label {
            color: #e6ebf5;
        }

        .rw-history-table-wrap {
            overflow: auto;
            border: 1px solid #2f3546;
            border-radius: 8px;
        }

        .rw-history-table-wrap table {
            margin: 0;
        }

        .rw-history-table-wrap th,
        .rw-history-table-wrap td {
            font-size: 0.85rem;
            white-space: nowrap;
        }

        .rw-history-empty {
            text-align: center;
            color: #9aa3b5;
            padding: 16px 8px;
        }

        .rw-toast {
            position: fixed;
            left: 50%;
            top: 50%;
            background: rgba(30, 120, 60, 0.95);
            color: #e9fff1;
            border: 1px solid #2e6c3b;
            border-radius: 8px;
            padding: 10px 14px;
            font-size: 0.9rem;
            box-shadow: 0 10px 24px rgba(0, 0, 0, 0.35);
            opacity: 0;
            transform: translate(-50%, -50%) translateY(6px);
            transition: opacity 0.2s ease, transform 0.2s ease;
            pointer-events: none;
            z-index: 1000;
        }

        .rw-toast.show {
            opacity: 1;
            transform: translate(-50%, -50%) translateY(0);
        }
    </style>
    <title>Runeword Settings</title>
</head>
<body>
<main class="container">
    {{ if ne .ErrorMessage "" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="error-message">
                    {{ .ErrorMessage }}
                </div>
            </div>
        </div>
    </div>
    {{ end }}

    <div class="rw-header">
        <a href="/supervisorSettings?supervisor={{ .Supervisor }}">
            <button type="button" class="secondary rw-back-btn" title="Back to character settings">&#8592;</button>
        </a>
        <h3 style="margin: 0;">Runeword Maker Settings for {{ .Supervisor }}</h3>
    </div>
    <div id="rwToast" class="rw-toast">Settings saved.</div>

    <!-- Runeword Maker Global Options -->
    <div style="margin-bottom: 12px; border-radius: 6px; border: 1px solid #4a4a4a; background: rgba(30, 35, 45, 0.9);">
        <div style="display: flex; align-items: center; justify-content: space-between; gap: 10px; padding: 6px 10px;">
            <strong style="font-size: 0.8rem; color: #aab;">Runeword Maker Options</strong>
            <button type="button" id="rwOptionsToggle" class="secondary" style="padding: 0.2rem 0.5rem; min-height: 0; font-size: 0.8rem; margin-bottom: 0; background: #3b82f6; border-color: #60a5fa; color: #fff;">Show</button>
        </div>
        <div id="rwOptionsPanel" style="display: none; padding: 6px 10px 8px;">
            <div style="display: flex; flex-wrap: wrap; gap: 16px;">
                <label style="display: flex; align-items: center; gap: 0.4rem; margin: 0; font-size: 0.85rem;">
                    <input type="checkbox"
                           name="rwPrioritizeBeforeCubing"
                           form="runeword-settings-form"
                           {{ if .Config.CubeRecipes.PrioritizeRunewords }}checked{{ end }}/>
                    <span style="white-space: nowrap; color: #f5f7ff;" title="Enable this to prioritize Runeword Maker and reroll before Cube Recipes.">Prioritize Runewords</span>
                </label>
                <label style="display: flex; align-items: center; gap: 0.4rem; margin: 0; font-size: 0.85rem;">
                    <input type="checkbox"
                           name="rwAutoUpgrade"
                           form="runeword-settings-form"
                           {{ if .Config.Game.RunewordMaker.AutoUpgrade }}checked{{ end }}/>
                    <span style="white-space: nowrap; color: #f5f7ff;" title="Automatically upgrade to a better tier base when found (e.g., replace normal Spirit with exceptional)">Auto Upgrade Tiers</span>
                </label>
                <label style="display: flex; align-items: center; gap: 0.4rem; margin: 0; font-size: 0.85rem;">
                    <input type="checkbox"
                           name="rwOnlyIfWearable"
                           form="runeword-settings-form"
                           {{ if .Config.Game.RunewordMaker.OnlyIfWearable }}checked{{ end }}/>
                    <span style="white-space: nowrap; color: #f5f7ff;" title="Only make runewords if the character meets the strength/dexterity requirements to wear the item">Only If Wearable</span>
                </label>
                <label style="display: flex; align-items: center; gap: 0.4rem; margin: 0; font-size: 0.85rem;">
                    <input type="checkbox"
                           name="rwAutoTierByDifficulty"
                           form="runeword-settings-form"
                           {{ if .Config.Game.RunewordMaker.AutoTierByDifficulty }}checked{{ end }}/>
                    <span style="white-space: nowrap; color: #f5f7ff;" title="Auto-select base tier based on difficulty: Normal=Normal, Nightmare=Exceptional, Hell=Elite">Auto Tier by Difficulty</span>
                </label>
            </div>
        </div>
    </div>

    <form method="post" autocomplete="off" class="compact-form" id="runeword-settings-form">
        <input type="hidden" name="name" value="{{ .Supervisor }}"/>
        <script id="rw-overrides-data" type="application/json">
            {{ toJSON .Config.Game.RunewordOverrides }}
        </script>
        <script id="rw-reroll-rules-data" type="application/json">
            {{ toJSON .Config.Game.RunewordRerollRules }}
        </script>
        <script id="rw-runes-data" type="application/json">
            {{ toJSON .RunewordRuneNames }}
        </script>
        <script id="rw-rerollable-data" type="application/json">
            {{ toJSON .RunewordRerollable }}
        </script>

        <div style="display: flex; gap: 20px; align-items: flex-start;">
            <section style="flex: 3 1 0; min-width: 260px;">
                <header>
                    <strong>
                        Runewords
                        {{ if .Config.Game.IsNonLadderChar }}
                        <span style="font-size: 0.85em; color: #ffb347;">(Non-ladder)</span>
                        {{ end }}
                    </strong>
                </header>
                <input type="text" id="rw-search" placeholder="Search runewords..." style="margin-bottom: 8px; width: 100%;">
                <div id="rw-list" style="max-height: 480px; overflow-y: auto; border: 1px solid #333; padding: 8px;">
                    {{ range $index, $recipe := .RunewordRecipeList }}
                    <div class="runeword-list-item" data-runeword-name="{{ $recipe }}" data-favorite="{{ if contains $.RunewordFavoriteRecipes $recipe }}1{{ end }}" style="padding: 4px 2px; cursor: pointer;">
                        <button type="button" class="rw-fav-btn" aria-label="Favorite runeword">&#9734;</button>
                        {{ if contains $.RunewordFavoriteRecipes $recipe }}
                        <input type="hidden" class="rw-fav-input" name="runewordFavoriteRecipes" value="{{ $recipe }}" />
                        {{ end }}
                        <input type="checkbox"
                               class="rw-enabled-checkbox"
                               name="runewordMakerEnabledRecipes"
                               value="{{ $recipe }}"
                               {{ if contains $.Config.Game.RunewordMaker.EnabledRecipes $recipe }}checked{{ end }}/>
                        <span class="runeword-name">{{ $recipe }}</span>
                        <span class="rw-reroll-badge" title="Reroll rules configured">
                            <i class="bi bi-arrow-repeat"></i>
                        </span>
                    </div>
                    {{ end }}
                </div>
            </section>

            <section style="flex: 7 1 0;">
                <div id="rw-detail-empty" style="font-size: 0.9em; color: #777; margin-top: 8px;">
                    <strong style="display: block; color: #d8dee9; margin-bottom: 6px;">How to use</strong>
                    <div>1) Select a runeword on the left.</div>
                    <div>2) Set base, quality, and eth preferences.</div>
                    <div>3) Add reroll rules if needed.</div>
                    <div>4) Save to apply.</div>
                </div>
                <div id="rw-detail" style="display: none; margin-top: 8px;">
                    <!-- Header: Title & Toggles -->
                    <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #333; padding-bottom: 1rem; margin-bottom: 0.3rem; padding-top: 1.25rem;">
                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                            <button type="button" id="rwDetailFavBtn" class="rw-fav-btn" aria-label="Favorite runeword">&#9734;</button>
                            <h4 id="rw-detail-title" style="margin: 0; font-size: 1.4rem;"></h4>
                        </div>
                        <div style="display: flex; gap: 1.5rem;">
                            <label style="margin: 0; cursor: pointer; display: flex; align-items: center; gap: 0.5rem;">
                                <input type="checkbox" id="rwEnabledToggle"/> 
                                <span>Make Runeword</span>
                            </label>
                            <label style="margin: 0; cursor: pointer; display: flex; align-items: center; gap: 0.5rem;">
                                <input type="checkbox" id="rwRerollEnabled"/> 
                                <span>Reroll</span>
                            </label>
                        </div>
                    </div>

                    <!-- Maker Settings Section -->
                    <article style="margin-bottom: 2rem; padding: 0; background: transparent; border: none; box-shadow: none;">
                        <small style="display: block; color: var(--text-muted); margin-bottom: 0.3rem;">
                            Specify the quality and base for crafting. Defaults to 'Any' if not specified.
                        </small>
                        <div class="grid">
                            <label>
                                Ethereal
                                <select id="rwEthMode" name="rwEthMode">
                                    <option value="any">Any</option>
                                    <option value="noneth">Non-eth only</option>
                                    <option value="eth">Eth only</option>
                                </select>
                            </label>
                            <label>
                                Quality
                                <select id="rwQualityMode" name="rwQualityMode">
                                    <option value="any">Normal or Superior</option>
                                    <option value="normal">Normal only</option>
                                    <option value="superior">Superior only</option>
                                </select>
                            </label>
                        </div>
                        <div class="grid">
                            <label style="display: block; width: 100%;">
                                Base types <span style="font-size: 0.8em; color: #888;">(multi-select)</span>
                                <div style="margin-top: 4px; width: 100%; display: block;">
                                    <button type="button" id="rwBaseTypeToggle" style="display: flex; align-items: center; justify-content: space-between; width: 100%; box-sizing: border-box; gap: 6px; padding: 0.45rem 0.6rem; min-height: 2.4rem; font-size: 0.9rem; margin-bottom: 0; border: 1px solid #3a3f4f; border-radius: 6px; background: rgba(15, 18, 28, 0.6); color: #f5f7ff;">
                                        <span id="rwBaseTypeSummary">Any</span>
                                        <span style="opacity: 0.7;">&#9662;</span>
                                    </button>
                                    <div id="rwBaseTypePanel" style="display: none; margin-top: 6px; padding: 6px; background: rgba(0,0,0,0.2); border-radius: 4px; border: 1px solid #333; max-height: 220px; overflow: auto;">
                                        <div id="rwBaseTypeContainer" style="display: flex; flex-wrap: wrap; gap: 8px;"></div>
                                    </div>
                                </div>
                                <input type="hidden" id="rwBaseType" name="rwBaseType" value=""/>
                            </label>
                            <label>
                                Base tier
                                <select id="rwBaseTier" name="rwBaseTier">
                                    <option value="">Any</option>
                                    <option value="normal">Normal</option>
                                    <option value="exceptional">Exceptional</option>
                                    <option value="elite">Elite</option>
                                </select>
                            </label>
                        </div>
                        <label>
                            Base names (optional)
                            <div style="display: flex; align-items: center; gap: 6px; margin-top: 4px;">
                                <select id="rwBaseNameSelect" name="rwBaseNameSelect" style="min-width: 180px;"></select>
                                <button type="button" id="rwBaseNameAdd" class="secondary rw-btn-add rw-base-add-btn">Add</button>
                            </div>
                            <div id="rwBaseNameTags" style="display: flex; flex-wrap: wrap; gap: 4px 8px; margin-top: 4px;"></div>
                            <input type="hidden" id="rwBaseName" name="rwBaseName" value=""/>
                        </label>
                    </article>

                    <!-- Reroll Settings Section -->
                    <div id="rwRerollSection" style="display: none;">
                        <article style="padding: 0; background: transparent; border: none; box-shadow: none;">
                            <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #333; padding-bottom: 1rem; margin-bottom: 0.3rem;">
                                <div style="display: flex; align-items: center; gap: 0.5rem;">
                                    <h4 style="margin: 0; font-size: 1.4rem;">
                                        Reroll
                                    </h4>
                                    <span id="rwRerollTargetSummary" class="rw-reroll-target-summary" style="display: none;"></span>
                                </div>
                                <div style="display: inline-flex; gap: 0.4rem;">
                                    <button type="button" id="rwRerollHistory" class="secondary outline" style="font-size: 0.8rem; padding: 0.3rem 0.8rem; margin-bottom: 0;">History</button>
                                    <button type="button" id="rwRerollAddRule" class="secondary outline" style="font-size: 0.8rem; padding: 0.3rem 0.8rem; margin-bottom: 0;">+ Add Rule</button>
                                </div>
                            </div>
                            
                            <small style="display: block; color: var(--text-muted); margin-bottom: 0.3rem;">
                                You can reroll runewords matching the specified quality and base, and set target stats.
                            </small>
                            <input type="hidden" id="rrRulesJSON" name="rrRulesJSON" value=""/>
                            <div id="rr-rules-container"></div>
                        </article>
                    </div>
                    <input type="hidden" id="rwCurrentName" name="rwCurrentName" value=""/>
                </div>
            </section>
        </div>

        <fieldset class="grid sticky-bottom" style="margin-top: 20px;">
            <a href="/"><input type="button" value="Cancel" class="secondary"/></a>
            <input type="submit" id="rwSaveBtn" value="Save"/>
        </fieldset>
    </form>

    <div id="rwHistoryModal" class="rw-history-modal" aria-hidden="true">
        <div class="rw-history-backdrop"></div>
        <div class="rw-history-panel">
            <div class="rw-history-header">
                <div>
                    <div id="rwHistoryTitle" class="rw-history-title">Reroll History</div>
                    <div id="rwHistorySubtitle" class="rw-history-subtitle">Showing history for the selected runeword.</div>
                </div>
                <div style="display: inline-flex; gap: 0.4rem;">
                    <button type="button" id="rwHistoryClear" class="secondary outline" style="font-size: 0.85rem; padding: 0.3rem 0.8rem; margin-bottom: 0; color: #d95c5c; border-color: #d95c5c;">Clear History</button>
                    <button type="button" id="rwHistoryClose" class="secondary outline" style="font-size: 0.85rem; padding: 0.3rem 0.8rem; margin-bottom: 0;">Close</button>
                </div>
            </div>
            <div class="rw-history-controls">
                <label style="margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                    <input type="checkbox" id="rwHistoryAllToggle" />
                    <span>Show all runewords</span>
                </label>
                <span style="font-size: 0.8rem; color: #d8dee9;">Default view is the current runeword.</span>
            </div>
            <div class="rw-history-table-wrap">
                <table role="grid">
                    <thead>
                        <tr>
                            <th style="width: 110px;">Time</th>
                            <th class="rw-history-col-runeword">Runeword</th>
                            <th style="width: 60px;">#</th>
                            <th>Target Stats</th>
                            <th>Actual Stats</th>
                            <th style="width: 90px;">Result</th>
                            <th>Failure Reason</th>
                        </tr>
                    </thead>
                    <tbody id="rwHistoryBody">
                        <tr id="rwHistoryEmptyRow">
                            <td class="rw-history-empty" colspan="7">No history yet.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
(function () {
    if (window.kooloRunewords && window.kooloRunewords.__initialized) {
        return;
    }

    const rollsCache = {};
    const basesCache = {};
    const baseTypesCache = {};

    function loadRolls(name) {
        if (rollsCache[name]) {
            return Promise.resolve(rollsCache[name]);
        }
        return fetch('/api/runewords/rolls?name=' + encodeURIComponent(name))
            .then(function(resp) { return resp.json(); })
            .then(function(rolls) {
                if (!Array.isArray(rolls)) {
                    rolls = [];
                }
                rollsCache[name] = rolls;
                return rolls;
            })
            .catch(function() { return []; });
    }

    function loadBases(name, baseType, tier) {
        const cacheKey = String(name) + '|' + String(baseType || '') + '|' + String(tier || '');
        if (basesCache[cacheKey]) {
            return Promise.resolve(basesCache[cacheKey]);
        }

        const params = new URLSearchParams();
        params.set('name', name);
        if (baseType) params.set('baseType', baseType);
        if (tier) params.set('tier', tier);

        return fetch('/api/runewords/bases?' + params.toString())
            .then(function(resp) { return resp.json(); })
            .then(function(bases) {
                if (!Array.isArray(bases)) {
                    bases = [];
                }
                basesCache[cacheKey] = bases;
                return bases;
            })
            .catch(function() { return []; });
    }

    function loadBaseTypes(name) {
        if (baseTypesCache[name]) {
            return Promise.resolve(baseTypesCache[name]);
        }
        return fetch('/api/runewords/base-types?name=' + encodeURIComponent(name))
            .then(function(resp) { return resp.json(); })
            .then(function(types) {
                if (!Array.isArray(types)) {
                    types = [];
                }
                baseTypesCache[name] = types;
                return types;
            })
            .catch(function() { return []; });
    }

    window.kooloRunewords = {
        loadRolls: loadRolls,
        loadBases: loadBases,
        loadBaseTypes: loadBaseTypes,
        __initialized: true
    };
})();
    </script>

    <script>
        (function() {
            const supervisorName = "{{ .Supervisor }}";
            const savedFlag = {{ if .Saved }}true{{ else }}false{{ end }};
            const searchInput = document.getElementById('rw-search');
            const listContainer = document.getElementById('rw-list');
            const items = Array.from(document.querySelectorAll('.runeword-list-item'));
            const detailEmpty = document.getElementById('rw-detail-empty');
            const detailPanel = document.getElementById('rw-detail');
            const detailTitle = document.getElementById('rw-detail-title');
            const detailFavBtn = document.getElementById('rwDetailFavBtn');
            const currentNameInput = document.getElementById('rwCurrentName');
            const enabledToggle = document.getElementById('rwEnabledToggle');
