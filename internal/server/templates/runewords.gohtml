            function loadRerollHistory(force) {
                if (rerollHistoryLoaded && !force) {
                    return Promise.resolve(rerollHistoryCache);
                }
                const stored = loadHistoryFromStorage();
                if (stored.length && rerollHistoryCache.length === 0) {
                    rerollHistoryCache = stored;
                }
                const params = new URLSearchParams();
                if (supervisorName) {
                    params.set('supervisor', supervisorName);
                }
                return fetch('/api/runewords/history?' + params.toString())
                    .then(function(resp) { return resp.json(); })
                    .then(function(data) {
                        const incoming = Array.isArray(data) ? data : [];
                        if (incoming.length) {
                            rerollHistoryCache = mergeHistory(rerollHistoryCache, incoming);
                            saveHistoryToStorage(rerollHistoryCache);
                        }
                        rerollHistoryLoaded = true;
                        return rerollHistoryCache;
                    })
                    .catch(function() {
                        if (rerollHistoryCache.length === 0) {
                            rerollHistoryCache = stored;
                        }
                        rerollHistoryLoaded = true;
                        return rerollHistoryCache;
                    });
            }

